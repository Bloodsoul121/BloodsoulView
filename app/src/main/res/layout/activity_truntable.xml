<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".turntable.TurntableActivity">

    <com.example.administrator.bloodsoulview.turntable.TurntableView
        android:id="@+id/turn_table_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            style="@style/normal_button"
            android:onClick="clickBtn1"
            android:text="开始旋转"
            tools:ignore="HardcodedText" />

        <Button
            style="@style/normal_button"
            android:onClick="clickBtn2"
            android:text="强制停止"
            tools:ignore="HardcodedText" />

        <Button
            style="@style/normal_button"
            android:onClick="clickBtn3"
            android:text="切换 显示/隐藏"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</RelativeLayout>