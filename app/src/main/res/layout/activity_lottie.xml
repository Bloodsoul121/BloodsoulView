<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".lottie.LottieActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#666666"
                app:lottie_autoPlay="true"
                app:lottie_fileName="emoji/ganxie.json"
                app:lottie_imageAssetsFolder="emoji/images1"
                app:lottie_loop="true" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#666666"
                app:lottie_autoPlay="true"
                app:lottie_fileName="emoji/yunla.json"
                app:lottie_imageAssetsFolder="emoji/images2"
                app:lottie_loop="true" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#666666"
                app:lottie_autoPlay="true"
                app:lottie_fileName="emoji/byebye.json"
                app:lottie_imageAssetsFolder="emoji/images3"
                app:lottie_loop="true" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="wrap_content"
                android:layout_height="216dp"
                android:layout_marginTop="10dp"
                android:background="#666666"
                app:lottie_autoPlay="true"
                app:lottie_fileName="freeflower.json"
                app:lottie_imageAssetsFolder="images7"
                app:lottie_loop="true" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>